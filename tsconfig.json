{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // Speeds up Jest transformations
    "jsx": "react-jsx", // React 17+ JSX support
    "types": ["jest", "@testing-library/jest-dom"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/layout.tsx",
    "src/components/Layout.bk",
    "src/app/_document.bk",
    "src/app/_app.bk",
    "jest.setup.ts", // Ensure setup file is included
    "babel.config.js"
  ],
  "exclude": ["node_modules"]
}
